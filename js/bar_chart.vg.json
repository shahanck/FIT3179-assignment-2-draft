{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Deaths by Volcanoes",
  "data": {
    "url": "https://raw.githubusercontent.com/shahanck/FIT3179-Week-10/main/data/volcano_data_2010.csv"
  },
  "params": [
    {
      "name": "Deaths_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 400,
        "step": 1,
        "name": "Deaths:"
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "bar"},
      "transform": [
        {"filter": "datum.DEATHS > Deaths_Above"},
        {"filter": "datum.DEATHS > 0"},
        {
          "aggregate": [
            {"op": "sum", "field": "DEATHS", "as": "sum_of_deaths"},
            {"op": "average", "field": "Latitude", "as": "Latitude"},
            {"op": "average", "field": "Longitude", "as": "Longitude"},
            {"op": "values", "field": "Country", "as": "Country"},
            {"op": "average", "field": "Elevation", "as": "Elevation"},
            {"op": "values", "field": "Status", "as": "Status"},
            {"op": "values", "field": "Type", "as": "Type"}
          ],
          "groupby": ["Name"]
        }
      ],
      "encoding": {
        "x": {"field": "Name", "type": "nominal", "title": "Name of Volcano"},
        "y": {
          "field": "sum_of_deaths",
          "type": "quantitative",
          "title": "Deaths"
        },
        "color":{"value": "#a12424"},
        "tooltip": [
          {"field": "Name", "type": "nominal"},
          {"field": "sum_of_deaths", "type": "quantitative", "title": "Deaths"},
          {
            "field": "Country[0]['Country']",
            "type": "nominal",
            "title": "Country"
          },
          {"field": "Latitude", "type": "quantitative"},
          {"field": "Longitude", "type": "quantitative"},
          {"field": "Elevation", "type": "quantitative"},
          {"field": "Type[0]['Type']", "type": "nominal", "title": "Type"},
          {"field": "Status[0]['Status']", "type": "nominal", "title": "Status"}
        ]
      }
    },
    {
      "mark": {"type": "text", "dy": -15},
      "transform": [
        {"filter": "datum.DEATHS > 0"},
        {
          "aggregate": [
            {"op": "sum", "field": "DEATHS", "as": "sum_of_deaths"}
          ],
          "groupby": ["Name"]
        }
      ],
      "encoding": {
        "y": {
          "field": "sum_of_deaths",
          "type": "quantitative",
          "sort": "ascending"
        },
        "x": {"field": "Name", "type": "nominal"},
        "text": {"field": "sum_of_deaths", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "style": {"label": {"align": "center", "baseline": "top", "dy": 3}}
  }
}