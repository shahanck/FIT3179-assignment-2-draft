{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 500,
  "title": {"text": "Eruptions per year", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/shahanck/FIT3179-Week-10/main/data/volcano_data_2010.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "!isValid(datum[\"Name\"]) || !isFinite(+datum[\"Name\"])"
        },
        {
          "type": "aggregate",
          "groupby": ["Year"],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "area",
      "style": ["area"],
      "sort": {"field": "datum[\"Year\"]"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "orient": {"value": "vertical"},
          "fill": {"value": "#a12424"},
          "tooltip": {
            "signal": "{\"Number of Eruptions\": format(datum[\"__count\"], \",\")}"
          },
          "description": {
            "signal": "\"Year: \" + (isValid(datum[\"Year\"]) ? datum[\"Year\"] : \"\"+datum[\"Year\"]) + \"; Number of eruptions: \" + (format(datum[\"__count\"], \"\")) + \"; Number of Eruptions: \" + (format(datum[\"__count\"], \",\"))"
          },
          "x": {"scale": "x", "field": "Year"},
          "y": {"scale": "y", "field": "__count"},
          "y2": {"scale": "y", "value": 0},
          "defined": {
            "signal": "isValid(datum[\"__count\"]) && isFinite(+datum[\"__count\"])"
          }
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "dy": {"value": -15},
          "fill": {"value": "black"},
          "description": {
            "signal": "\"Year: \" + (isValid(datum[\"Year\"]) ? datum[\"Year\"] : \"\"+datum[\"Year\"]) + \"; Number of eruptions: \" + (format(datum[\"__count\"], \"\")) + \"; Count of Records: \" + (format(datum[\"__count\"], \"\"))"
          },
          "x": {"scale": "x", "field": "Year"},
          "y": {"scale": "y", "field": "__count"},
          "text": {"signal": "format(datum[\"__count\"], \"\")"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {"data": "source_0", "field": "Year", "sort": true},
      "range": [0, {"signal": "width"}],
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "__count"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Number of eruptions",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {"range": {"color": "symbol"}}
}